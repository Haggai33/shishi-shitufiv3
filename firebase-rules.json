{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && $uid === auth.uid"
      }
    },
    
    "organizerEvents": {
      "$organizerId": {
        ".read": "auth != null",
        ".write": "auth != null && $organizerId === auth.uid",
        
        "events": {
          "$eventId": {
            ".read": "auth != null",
            
            "details": {
              ".write": "auth != null && $organizerId === auth.uid"
            },
            
            "organizerId": {
              ".write": "auth != null && $organizerId === auth.uid"
            },
            
            "organizerName": {
              ".write": "auth != null && $organizerId === auth.uid"
            },
            
            "createdAt": {
              ".write": "auth != null && $organizerId === auth.uid"
            },
            
            "updatedAt": {
              ".write": "auth != null && $organizerId === auth.uid"
            },
            
            "menuItems": {
              ".write": "auth != null && $organizerId === auth.uid",
              
              "$itemId": {
                ".write": "auth != null && ($organizerId === auth.uid || !data.child('assignedTo').exists())"
              }
            },
            
            "assignments": {
              ".write": "auth != null",
              
              "$assignmentId": {
                ".write": "auth != null && (newData.child('userId').val() === auth.uid || data.child('userId').val() === auth.uid || $organizerId === auth.uid)"
              }
            },
            
            "participants": {
              ".write": "auth != null",
              
              "$participantId": {
                ".write": "auth != null && ($participantId === auth.uid || $organizerId === auth.uid)"
              }
            }
          }
        }
      }
    }
  }
}